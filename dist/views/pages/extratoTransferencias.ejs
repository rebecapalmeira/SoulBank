<%- include("../partials/header-alt") %>

<main class="container mt-5" id="main-extratos">
    <div class="row">
        <div class="col-12">
            <h1 class="display-4 text-center">Transferências</h1>
        </div>

        <% if (transferencias == 0) { %>
            <div class="d-none">
                <div>
                    <a href="/usuario" class="btn btn-primary mr-5">Página Inicial</a>
                </div>
            </div>
        <% } %>
        

        <div class="container">
            <!-- <h3>Recebidas</h3> -->
            <table class="table table-hover table-striped table-light mt-5 mb-5">
                <thead>
                    <tr>
                        <th class="text-center">ID da Transação</th>
                        <th class="text-center">Agencia Origem</th>
                        <th class="text-center">Conta Origem</th>
                        <th class="text-center">Quem Transferiu</th>                                                             
                        <th class="text-center">Agencia Destino</th>                                                             
                        <th class="text-center">Conta Destino</th>                                                             
                        <th class="text-center">Quem Recebeu</th>                                                             
                        <th class="text-center">Valor</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (transferencias == 0) { %>
                        <tr>
                            <td colspan="8" class="alert alert-primary text-center text-uppercase" role="alert">
                                Não existem registros de transferências vinculados à sua conta.
                            </td>
                            <td>                                        
                                <div class="d-flex justify-content-center">
                                    <a href="/" class="btn btn-primary">Página Inicial</a>
                                </div>                               
                            </td>
                        </tr>
                    <% } %>
                    <% transferencias.forEach(function(transferencia) { %>
                        <tr>
                            <td class="text-center">
                                <%= transferencia._id %>
                            </td>
                            <td class="text-center">
                                <%= transferencia.agenciaOrigem %>
                            </td>
                            <td class="text-center">
                                <%= transferencia.contaOrigem %>
                            </td>
                            <td class="text-center">
                                <%= transferencia.nomeOrigem %>
                            </td>
                            <td class="text-center">
                                <%= transferencia.agenciaDestino %>
                            </td>     
                            <td class="text-center">
                                <%= transferencia.contaDestino %>
                            </td>     
                            <td class="text-center">
                                <%= transferencia.nomeDestino %>
                            </td>     
                            <td class="text-center">
                                <%= transferencia.valor %>
                            </td>   
                        </tr>
                   <% }) %>
                </tbody>
                <!-- <tfoot>
                    <tr>
                        <td colspan="8"><a href="/"><button class="btn btn-dark">Página Inicial</button></a></td>
                    </tr>
                </tfoot> -->
            </table>
        </div>                  
    </div>
</main>

<%- include("../partials/footer") %>