    <script>
        // função de mostrar/esconder saldo
        function escondeSaldo() {
            var x = document.getElementById("saldo");
            if (x.style.display === "none") {
                x.style.display = "block";
            } else {
                x.style.display = "none";
            }
        }

        const obj = {
            aberto: false,
            setAberto: () => obj.aberto = obj.aberto == false ? true : false
        }

        const botaoChange = document.getElementById('trocar')
        const i = document.getElementById("olho")
        botaoChange.addEventListener('click', () => {
            obj.setAberto()
            if (obj.aberto == true) {
                console.log('retornei ao botao original')
                i.setAttribute('class', 'fas fa-eye-slash')
            } else {
                console.log('mudei o botao')
                i.setAttribute('class', 'fas fa-eye')
            }
        })

