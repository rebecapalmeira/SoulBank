<%- include("../partials/header-alt") %>

    <main class="container mt-5">
        <h1 class="text-center text-uppercase h1-transfer my-5">Transferência</h1>
        <div class="container">
            <div class="row d-flex justify-content-center align-items-center mb-5">
                <div class="col col-lg-11 mx-2">
                    <div class="row">
                        <div class="col-lg-5 d-none d-md-block imglateral-transfer1"
                            style="background-color: #e3e4df; border-radius: 35px 0 0 0;" title="Photo by Josh Hild on Unsplash
                            ">
    
                        </div>
                        <div class="col-md-7 d-flex align-items-center"
                            style="background-color: #6dbddf; border-radius: 0 0 35px 0;">
                            <div class="card-body p-lg-4 text-black">
                              <form class="form-card" method="POST" action="/transferencia">
                                <div class="row justify-content-between text-left">
                                    <h4 class="mt-2 mb-2">Dados da Conta de Origem</h4>
                                  <div class="form-group col-sm-6 flex-column d-flex">
                                    <label for="agenciaOrigem">Agência de Origem</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">Agência</span>
                                        </div>
                                        <input type="text" class="form-control" name="agenciaOrigem" id="agenciaOrigem" value="<%= usuarioLogado.agencia %>">
                                    </div>
                                  </div>
                                  <div class="form-group col-sm-6 flex-column d-flex">
                                    <label for="contaOrigem">Conta de Origem</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">Conta</span>
                                        </div>
                                        <input type="text" class="form-control" name="contaOrigem" id="contaOrigem" value="<%= usuarioLogado.conta %>">
                                    </div>
                                  </div>                    
                                </div>

                                <div class="row justify-content-between text-left">
                                    <h4 class="mt-2 mb-2">Dados da Conta de Destino</h4>
                                    <div class="form-group col-sm-6 flex-column d-flex">
                                        <label for="agenciaOrigem">Agência de Destino</label>
                                        <div class="input-group">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text">Agência</span>
                                            </div>
                                            <input type="text" class="form-control" name="agenciaDest" id="agenciaDest" placeholder="Agência destino">
                                        </div>
                                    </div>
                                    <div class="form-group col-sm-6 flex-column d-flex">
                                        <label for="contaOrigem">Conta de Destino</label>
                                        <div class="input-group">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text">Conta</span>
                                            </div>
                                            <input type="text" class="form-control" name="contaDest" id="contaDest" placeholder="Conta destino">
                                        </div>   
                                    </div>                    
                                </div>

                                <div class="row justify-content-between text-left">
                                    <h4 class="mt-2 mb-2">Informações para Transferência</h4>
                                    <div class="form-group col-sm-6 flex-column d-flex">
                                        <label for="agenciaOrigem">Saldo em Conta</label>
                                        <div class="input-group">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text" id="saldo">R$</span>
                                            </div>
                                            <input type="text" class="form-control" name="saldo" id="saldo" value="<%= usuarioLogado.saldo %>">
                                        </div>
                                    </div>
                                    <div class="form-group col-sm-6 flex-column d-flex">
                                        <label for="contaOrigem">Valor a Transferir</label>
                                        <div class="input-group">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text" id="valor">R$</span>
                                            </div>
                                            <input type="text" class="form-control" name="valor" id="valor">
                                        </div>  
                                    </div>                    
                                </div>

                                <div class="row justify-content-between text-left">
                                    <h4 class="mt-2 mb-2">Confirmar Transação</h4>
                                    <div class="form-group row">
                                        <div class="col-sm-12">
                                            <div class="input-group col-12 mb-5 mt-3">
                                                <input type="password" class="form-control" name="senha" id="senha" placeholder="Senha">
                                                <button class="btn btn-dark" type="submit">Confirmar</button>
                                            </div>
                                        </div>  


                                        <div>
                                            <div><input type="hidden" name="nome" value="<%= usuarioLogado.nome %>"></div>
                                            <div><input type="hidden" name="email" value="<%= usuarioLogado.email %>"></div>
                                            <div><input type="hidden" name="contato" value="<%= usuarioLogado.contato %>"></div>
                                            <div><input type="hidden" name="cpf" value="<%= usuarioLogado.cpf %>"></div>
                                            <div><input type="hidden" name="senha" value="<%= usuarioLogado.senha %>"></div>
                                        </div>
                                    </div>               
                                </div>
                                                    
                              </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>      
    </main>
  
    <!-- <script src="indice.js"></script> -->
    <%- include("../partials/footer") %>