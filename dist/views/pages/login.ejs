<%- include("../partials/header-alt") %>
<section style="background-color: #e3e4df;">
    <div class="container">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col col-xl-10" style="margin-top: 5vh;margin-bottom: 5vh;">
                <div class="row">
                    <div class="col-lg-5 d-none d-md-block imglateral"
                        style="background-color: #e3e4df; border-radius: 35px 0 0 0;">

                    </div>
                    <div class="col-md-7 d-flex align-items-center"
                        style="background-color: #6dbddf; border-radius: 0 0 35px 0;">
                        <div class="card-body p-lg-4 text-black">
                            <form action="/login" method="POST">
                                <div class="d-flex align-items-center mb-3 pb-1">
                                </div>
                                <h5 class="fw-normal mb-3 pb-3 text-center" style="letter-spacing: 1px; font-size: 25px;">Faça o seu login
                                </h5>
                                <div class="form-outline mb-2" style="font-weight: 500;"">
                                    <label for="agencia">Agência</label>
                                    <input type="text" class="form-control" name="agencia" id="agencia"
                                        placeholder="Agência">
                                </div>
                                <div class="form-outline mb-2">
                                    <div class="form-group" style="font-weight: 500;">
                                        <label for="conta">Conta</label>
                                        <input type="text" class="form-control" name="conta" id="conta"
                                            placeholder="Conta">
                                    </div>
                                    <div class="form-outline mb-2">
                                        <div class="form-group" style="font-weight: 500;">
                                            <label for="senha">Senha</label>
                                            <input type="password" class="form-control" name="senha" id="senha"
                                                placeholder="Senha">
                                        </div>
                                        <div class="pt-1 mb-2">
                                            <button class="btn btn-dark btn-lg btn-block"
                                                type="submit">Login</button>
                                        </div>
                            </form>
                            <a class="mb-1" href="#!" style="color: black; font-size: 13px;">Esqueceu a sua senha?</a>
                            <p class="mb-1 pb-lg-2">Ainda não possui uma conta? <a
                                    href="/cadastrarUsuarios" class="font-weight-bolder" style="color: #D80530;">Crie uma conta</a>
                            </p>
                            <a href="#!" style="color: black; font-size: 13px;">Termos de uso.</a>
                            <a href="#!"  style="color: black; font-size: 13px;">Política de Privacidade</a>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

