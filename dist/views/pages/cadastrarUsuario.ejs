                                  <label for="nome">Nome<span class="text-danger"> *</span></label>
                                  <input class="form-control" type="text" id="nome" name="nome" placeholder="Ex: Ana" onblur="validaNome()" required>
                                </div>
                              
                  
                              </div>
                    
                              <div class=" row justify-content-between text-left">
                                <div class="form-group col-sm-6 flex-column d-flex">
                                  <label  for="cpf">CPF<span class="text-danger"> *</span></label>
                                  <input class="form-control" type="text" id="cpf" name="cpf" placeholder="000.000.000-15" onblur="validaCpf()" required>
                                </div>
                    
                                <div class="form-group col-sm-6 flex-column d-flex">
                                  <label  for="contato">Contato<span class="text-danger"> *</span></label>
                                  <input class="form-control" type="tel" id="contato" name="contato" placeholder="Ex: (15) 99999-9999" onblur="validaNumero()" required>
                                </div>
                    
                              </div>
                    
                              <div class="row justify-content-between text-left">

                                <div class="col-sm-7 flex-column d-flex">
                                  <label  for="email">E-mail<span class="text-danger"> *</span></label>
                                  <div class="input-group">
                                      <div class="input-group-prepend">
                                          <span class="input-group-text" id="saldo">@</span>
                                      </div>
                                      <input class="form-control" type="email" id="email" name="email" placeholder="usuario@email.com" onblur="validaEmail()" required>
                                  </div>
                                </div>
                  
                                <div class="form-group col-sm-5 flex-column d-flex">
                                  <label  for="senha">Senha<span class="text-danger"> *</span></label>
                                  <input  class="form-control"type="password" id="senha" name="senha" placeholder="******" onblur="validaSenha()" title="A senha deve conter 5 digitos, contendo pelo menos 1 numero e  uma letra maiuscula" required>
                                </div>
                  
                              </div>
                    
                    
                              <div class="row justify-content-between text-left">
                                <div class="form-group col-sm-4 flex-column d-flex">
                                  <label  for="agencia">AgÃªncia<span class="text-danger"> *</span></label>
                                  <input class="form-control" type="text" id="agencia" name="agencia" placeholder="0000-0" onblur="validaAgencia()" required>
                                </div>
                  
                                <div class="form-group col-sm-4 flex-column d-flex">
                                  <label  for="conta">Conta<span class="text-danger"> *</span></label>
                                  <input class="form-control" type="text" id="conta" name="conta" placeholder="Digite sua conta" onblur="validaConta()" required>
                                </div>

                                <div class="col-sm-4 flex-column d-flex">
                                  <label for="saldo">Saldo em conta</label>
                                  <div class="input-group">
                                      <div class="input-group-prepend">
                                          <span class="input-group-text" id="saldo">R$</span>
                                      </div>
                                      <input type="text" class="form-control" name="saldo" id="saldo" placeholder="Ex: 415.00" onblur="validaSaldo()" required>
                                  </div>
                                </div>
                    
                              <div class="rowr">
                                <div class="form-group col-sm-12">
                                  <button class="btn btn-block btn-dark" id="botaoEnviar" type="submit"
                                    onfocus="validarcampos()" style=" font-weight: 600;">Cadastrar</button>
                                </div>
                              </div>
                            </form>
                          </div>
                      </div>
                  </div>
              </div>
          </div>
      </div>      
    </main> 
    <script>
      function validaNome() {
  
        let letras = /^[a-zA-Z\s]*$/;
        let nome = document.getElementById("nome").value;
        let campo = document.getElementById("nome");
  
        if (nome.match(letras) && nome != "") {
          campo.style.border = "2px solid green";
          count++;
        }
        else {
          campo.style.border = "2px solid red";
        }
  
      }
  
      function validaCpf() {
  
        let numeros = /([0-9]{2}[\.]?[0-9]{3}[\.]?[0-9]{3}[\/]?[0-9]{4}[-]?[0-9]{2})|([0-9]{3}[\.]?[0-9]{3}[\.]?[0-9]{3}[-]?[0-9]{2})/;
        let cpf = document.getElementById("cpf").value;
        let campo = document.getElementById("cpf");
  
        if (cpf.match(numeros) && cpf != "") {
          campo.style.border = "2px solid green";
          count++;
        }
        else {
          campo.style.border = "2px solid red";
        }
  
      }
      function validaNumero() {
  
        let numeros = /^\(?[1-9]{2}\)? ?(?:[2-8]|9[1-9])[0-9]{3}\-?[0-9]{4}$/;
        let contato = document.getElementById("contato").value;
        let campo = document.getElementById("contato");
  
        if (contato.match(numeros) && contato != "") {
          campo.style.border = "2px solid green";
          count++;
        }
        else {
          campo.style.border = "2px solid red";
        }
  
      }
  
      function validaEmail() {
  
        let caracteres = /^[a-zA-Z0-9.!#$%&'+/=?^_`{|}~-]+@[a-zA-Z0-9](?:[a-zA-Z0-9-]{0,61}[a-zA-Z0-9])?(?:\.[a-zA-Z0-9](?:[a-zA-Z0-9-]{0,61}[a-zA-Z0-9])?)$/;
        let email = document.getElementById("email").value;
        let campo = document.getElementById("email");
  
        if (email.match(caracteres) && email != "") {
          campo.style.border = "2px solid green";
          count++;
        }
        else {
          campo.style.border = "2px solid red";
        }
  
      }
  
      function validaSenha() {
        // A senha deve conter 5 digitos, contendo pelo menos 1 numero e  uma letra maiuscula
        let caracteres = /^(?=.[A-Za-z])(?=.\d)[A-Za-z\d]{5,}$/;
        let senha = document.getElementById("senha").value;
        let campo = document.getElementById("senha");
  
        if (senha.match(caracteres) && senha != "") {
          campo.style.border = "2px solid green";
          count++;
        }
        else {
          campo.style.border = "2px solid red";
        }
  
      }
  
  
